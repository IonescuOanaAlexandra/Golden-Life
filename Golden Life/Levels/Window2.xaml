<Window x:Class="Golden_Life.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Golden_Life"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="700">
    <Grid KeyDown="Grid_KeyDown">
        <Image Source="/Resources/egypt.png" Stretch="Fill" Panel.ZIndex="-1" />
        <MediaElement x:Name="MePlayer" Height="450" Width="700" 
                      Panel.ZIndex="2" Initialized="MePlayer_Initialized" 
                      LoadedBehavior="Manual"/>

    </Grid>
</Window>
